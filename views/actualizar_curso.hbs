<div class="card">
  <div class="card-body">
    <form method="POST" action="/actualizar_curso/{{curso.id}}" enctype="multipart/form-data">
      {{>alertas}}
      <h3 class="text-center font-weight-bold">
        Editar Curso
      </h3>
      <br />
      <div class="form-row">
        <div class="form-group col-md-6">
          <label for="image" class="font-weight-bold">
            Imagen de Portada
          </label>
          <input type="file" class="form-control" name="image" id="image" />
        </div>
        <div class="form-group col-md-6">
          <img
            src="/uploads/img/{{curso.imagen}}"
            alt="hola"
            class="img-fluid"
          />
        </div>
      </div>

      <div class="form-row">
        <div class="form-group col-md-10">
          <label for="nombre" class="font-weight-bold">
            Título
          </label>
          <input
            type="text"
            class="form-control"
            placeholder="Nombre del curso"
            id="nombre"
            name="nombre"
            value="{{curso.nombre}}"
          />
        </div>
        <div class="form-group col-md-2">
          <label for="Precio" class="font-weight-bold">
            Precio
          </label>
          <div class="input-group mb-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                $
              </span>
            </div>
            <input
              type="text"
              class="form-control"
              placeholder="0.00"
              id="precio"
              name="precio"
              value="{{curso.precio}}"
              aria-label="Amount (to the nearest dollar)"
            />
          </div>
        </div>
      </div>
      <div class="form-group">
        <label for="descripcion" class="font-weight-bold">
          Descripción
        </label>
        <input
          type="text"
          class="form-control"
          placeholder="Descripcion"
          id="descripcion"
          name="descripcion"
          value="{{curso.descripcion}}"
        />
      </div>
      <div class="form-group">
        <label for="categoria" class="font-weight-bold">
          Categorías
        </label>
        <input
          type="text"
          class="form-control"
          placeholder="Categoria"
          id="categoria"
          name="categoria"
          value="{{curso.categoria}}"
          data-role="tagsinput"
        />
      </div>
      <div class="form-group">
        <label for="informacion" class="font-weight-bold">
          Información
        </label>
        <textarea
          class="form-control"
          id="informacion"
          name="informacion"
          rows="3"
        >
          {{{curso.informacion}}}
        </textarea>
      </div>
      <button type="submit" class="btn btn-lg">
        Actualizar
      </button>
    </form>
  </div>
</div>