<div class="container">
  <div class="card">
    <div class="card-body">
      <form method="POST" action="/actualizar_perfil">
        {{>alertas}}
        <h3 class="text-center font-weight-bold">
          Mi Perfil
        </h3>

        <div class="form-group">
          <label for="nombre" class="font-weight-bold">
            Nombre
          </label>
          <input
            type="text"
            class="form-control"
            name="nombre"
            id="nombre"
            value="{{usuario.nombre}}"
          />
        </div>
        <div class="form-group">
          <label for="apellido" class="font-weight-bold">
            Apellido
          </label>
          <input
            type="text"
            class="form-control"
            name="apellido"
            id="apellido"
            value="{{usuario.apellido}}"
          />
        </div>
        <div class="form-group">
          <label for="email" class="font-weight-bold">
            Correo Electr√≥nico
          </label>
          <input
            type="email"
            class="form-control"
            name="email"
            id="email"
            placeholder="correo@ejemplo.com"
            value="{{usuario.email}}"
          />
        </div>
        <div class="form-group">
          <label for="usuario" class="font-weight-bold">
            Usuario
          </label>
          <input
            type="usuario"
            class="form-control"
            name="usuario"
            id="usuario"
            placeholder="usuario-ejemplo"
            value="{{usuario.usuario}}"
          />
        </div>
        <button type="submit" class="btn btn-lg btn-opt">
          Guardar
        </button>
      </form>
    </div>
  </div>
</div>