<h1>{{curso.nombre}}</h1>
<h1>{{curso.descripcion}}</h1>
<h1>{{curso.precio}}</h1>
<a href="/actualizar_curso/{{curso.id}}" class="btn btn-primary">Actualizar</a>

{{#if lecciones}}
    {{#each lecciones}}
    <h2>___________________________________</h2>
        <h1>{{dataValues.id}}</h1>
        <h1>{{dataValues.nombre}}</h1>
        <h1>{{dataValues.descripcion}}</h1>
        <h1>{{dataValues.url}}</h1>
        <h2>___________________________________</h2>
    {{/each}}
    <a href="/agregar_leccion/{{curso.id}}" class="btn btn-primary">Agregar Leccion</a>
{{else}}
    <h2>Todabia no hay lecciones</h2>
    <h2>Agrega una !!</h2>
    <a href="/agregar_leccion/{{curso.id}}" class="btn btn-primary">Agregar Leccion</a>
{{/if}}