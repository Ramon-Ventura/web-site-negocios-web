<div class="container">
  <div class="card mb-3" style="max-width: 1400px;">
    {{! Centrar imagen verticalmente en la tarjeta: d-flex flex-wrap align-items-center }}
    <div class="row no-gutters d-flex flex-wrap align-items-center">
      <div class="col-lg-6">
        <img
          src="/uploads/img/{{curso.imagen}}"
          class="card-img img-fluid"
          alt="..."
        />
      </div>
      <div class="col-lg-6">
        <div class="card-body">
          <h5 class="card-title font-weight-bold">
            {{curso.nombre}}
          </h5>
          <p class="card-text">
            {{curso.descripcion}}
          </p>
          <input
            type="number"
            name="puntaje"
            id="rating-readonly"
            class="rating text-warning"
            data-clearable="remove"
            value="{{puntajePromedio}}"
            data-readonly
          />
          <h1 class="card-title font-weight-bold">
            {{curso.precio}}
            US$
          </h1>
          <h6>
            {{cantidadInscritos.count}}
          </h6>
          <h6>
            Creado por:
            <a>
              {{usuarioCreado.nombre}}
            </a>
          </h6>
          <h6 class="card-title">
            Publicado:
            {{hace}}
          </h6>
        </div>
      </div>
    </div>
  </div>
  <h3 class="font-weight-bold">
    Informaci칩n
  </h3>
  <div class="card">
    <div class="card-body">
      {{{curso.informacion}}}
    </div>
  </div>
  {{! Contenedor para las lecciones }}
  <div class="my-5">
    <h3 class="font-weight-bold">
      Contenido
    </h3>
    {{#if lecciones}}
      {{#each lecciones}}
        <div class="card mb-5">
          <div class="card-body">
            <h5 class="card-title font-weight-bold">
              {{dataValues.nombre}}
            </h5>
            <p class="card-text">
              {{dataValues.descripcion}}
            </p>
            <a href="/leccion_info_ins/{{dataValues.url}}" class="btn">
              Ver mas
            </a>
          </div>
        </div>
      {{/each}}
    {{else}}
      <div class="card">
        <div class="card-body">
          <h5 class="card-title font-weight-bold">
            Todavia no tienes ninguna leccion.
          </h5>
          <p class="card-text">
            Se paciente, el docente agregara nuevas lecciones pronto.
          </p>
        </div>
      </div>
    {{/if}}
  </div>
  <div class="card">
    <div class="card-body">
      {{#if comentarios}}
        {{#each comentarios}}
          <div>
            {{dataValues.usuario.dataValues.nombre}}
            {{dataValues.usuario.dataValues.apellido}}
            <input
              type="number"
              name="puntaje"
              id="rating-readonly"
              class="rating text-warning"
              data-clearable="remove"
              value="{{dataValues.puntaje}}"
              data-readonly
            />
          </div>
          <div>
            {{dataValues.comentario}}
          </div>
        {{/each}}
      {{else}}
        <div>
          Todavia no hay comentarios
        </div>
      {{/if}}
      {{#if comentarioUsuario}}
        <div>
          Ya publicaste tu rese침a
        </div>
      {{else}}
        <form method="POST" action="/agregar_comentario/{{curso.url}}">
          {{>alertas}}
          <div class="form-group">
            <label for="comentario">
              Escribe tu rese침a
            </label>
            {{! Input que funcionara para introducir el puntaje }}
            <input
              type="number"
              name="puntaje"
              id="puntaje"
              class="rating text-warning"
              data-clearable="remove"
            />
            <textarea
              class="form-control"
              name="comentario"
              id="comentario"
              cols="30"
              rows="5"
              required
            ></textarea>
          </div>
          <button type="submit" class="btn btn-lg">
            Publicar Rese침a
          </button>
        </form>
      {{/if}}
    </div>
  </div>
</div>