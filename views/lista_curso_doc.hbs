<div class="container">
  {{#if cursosArrayView}}
    <div class="row">
      {{#each cursosArrayView}}
        <div class="col-lg-4 col-md-6 theme-card">
          <div class="card h-100 theme-card__body">
            <img
              src="/uploads/{{imagen}}"
              class="card-img-top img-fluid"
              alt="..."
            />
            <div class="card-body d-flex flex-column">
              <div class="card-titulo-curso">
                {{nombreCurso}}
              </div>
              <div class="card-puntaje-curso">
                <input
                  type="number"
                  name="puntaje"
                  id="rating-readonly"
                  class="rating text-warning"
                  data-clearable="remove"
                  value="{{puntaje}}"
                  data-readonly
                />
              </div>
              <div class="card-precio">
                {{precio}} US$
              </div>
              <a href="/admin_curso/{{url}}" class="mt-auto btn">
                Administrar
              </a>
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="card">
      <div class="card-body">
        <h5 class="card-title font-weight-bold">
          Todavia no tienes ningun curso.
        </h5>
        <p class="card-text">
          Que esperas para crear tu primer curso.
        </p>
      </div>
    </div>
  {{/if}}
  <a href="/agregar_curso" class="btn mt-5 btn-opt">
    Agregar Curso
  </a>
</div>