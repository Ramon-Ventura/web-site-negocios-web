<div class="container">
  <h1>
    Cambia tu contraseña
  </h1>
  <form class="form-signin" action="/resetear_password/{{token}}" method="POST">
    {{>alertas}}
    <div class="form-group">
      <label class="mt-3 mb-1">
        Contraseña nueva
      </label>
      <input
        name="password"
        required=""
        autofocus=""
        placeholder="Contraseña Nueva"
        class="form-control mt-3 mb-3"
        type="password"
      />
    </div>

    <div class="form-group">
      <label class="mt-3 mb-1">
        Verifica tu nueva contraseña
      </label>
      <input
        name="passwordVerify"
        required=""
        placeholder="Verifica tu nueva contraseña"
        class="form-control mt-3 mb-3"
        type="password"
      />
    </div>

    <div class="form-group">
      <a href="/iniciar_sesion">
        Volver al inicio de sesión
      </a>
    </div>
    <button type="submit" class="btn btn-primary">
      Continuar
    </button>
  </form>
</div>