<div class="container">
  <h1>
    Restablece tu contraseña
  </h1>
  <form class="form-signin" action="/restablecer_password" method="POST">
    {{>alertas}}
    <div class="form-group">
      <label class="mt-3 mb-1" for="inputEmail">
        Correo electrónico
      </label>
      <input
        name="email"
        required=""
        autofocus=""
        placeholder="Correo electrónico"
        id="inputEmail"
        class="form-control mt-3 mb-3"
        type="email"
      />
    </div>
    <div class="form-group">
      <a href="/iniciar_sesion">
        Volver al inicio de sesion
      </a>
    </div>
    <button type="submit" class="btn btn-primary">
      Restablecer
    </button>
  </form>
</div>